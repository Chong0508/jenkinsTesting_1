pipeline {
    agent {
        docker { image 'maven:3.9.3-openjdk-17' } // Maven + JDK ready
    }

    options {
        timestamps()
        ansiColor('xterm')
    }

    environment {
        JAVA_HOME = '/usr/local/openjdk-17'
    }

    stages {
        stage('Checkout SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/Chong0508/jenkinsTesting_1.git'
            }
        }

        stage('Pre-build Dependencies') {
            steps {
                echo 'Downloading Maven dependencies...'
                sh 'mvn -B dependency:go-offline'
            }
        }

        stage('Build') {
            steps {
                echo 'Building project...'
                sh 'mvn -B clean install'
            }
        }

        stage('Unit Tests') {
            steps {
                echo 'Running tests...'
                sh 'mvn test'
            }
        }

        stage('Package & Archive') {
            steps {
                echo 'Packaging...'
                sh 'mvn package'
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }

        stage('Docker Build (Optional)') {
            steps {
                echo 'Optional Docker build stage'
            }
        }
    }

    post {
        success {
            echo '✅ Build and tests succeeded!'
        }
        failure {
            echo '❌ Build or tests failed!'
        }
        always {
            cleanWs()
        }
    }
}
