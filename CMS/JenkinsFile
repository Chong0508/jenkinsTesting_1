pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                checkout scm
                echo "Repository structure:"
                sh "ls -R ."
            }
        }

        stage('Verify Project Structure') {
            steps {
                echo "Checking for pom.xml in project root..."
                sh "[ -f pom.xml ]"
            }
        }

        stage('Initial Docker Build') {
            steps {
                echo "Running Maven inside Docker..."
                sh '''
                    docker run -u 0 --rm \
                        -v $(pwd):/app \
                        -w /app \
                        maven:3-jdk-11 mvn clean install -DskipTests=true
                '''
            }
        }

        stage('Build & Unit Test') {
            steps {
                echo "Running Maven on Jenkins host..."
                sh "mvn clean install -DskipTests=false -B"
            }
            post {
                always {
                    junit "target/surefire-reports/*.xml"
                }
            }
        }

        stage('Setup Integration Environment') {
            steps {
                echo "Starting docker-compose services..."
                sh '''
                    docker-compose up -d --build
                    echo "Waiting for services..."
                    sleep 20
                '''
            }
        }

        stage('Integration Tests') {
            when {
                expression { currentBuild.result == null || currentBuild.result == 'SUCCESS' }
            }
            steps {
                echo "Running integration tests..."
                sh "mvn failsafe:integration-test -DskipTests=false -B"
            }
            post {
                always {
                    junit "target/failsafe-reports/*.xml"
                }
            }
        }
    }

    post {
        always {
            echo "Cleaning environment..."
            sh "docker-compose down || true"
            cleanWs()
        }
        success {
            echo "PIPELINE SUCCESS!"
        }
        failure {
            echo "PIPELINE FAILED!"
        }
    }
}
