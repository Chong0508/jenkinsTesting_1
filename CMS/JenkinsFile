pipeline {
    agent any  // run on any available node

    environment {
        MAVEN_OPTS = "-Dmaven.repo.local=$HOME/.m2/repository"
        PROJECT_NAME = "CMS-Backend-Pipeline"
    }

    options {
        buildDiscarder(logRotator(daysToKeepStr: '30', numToKeepStr: '50'))
        timestamps()  // keep timestamps in console log
    }

    stages {
        stage('Checkout SCM') {
            steps {
                echo "Cloning repository..."
                git branch: 'main', url: 'https://github.com/Chong0508/jenkinsTesting_1.git'
            }
        }

        stage('Pre-build Dependencies') {
            steps {
                echo "Downloading Maven dependencies..."
                sh 'mvn -B dependency:go-offline'
            }
        }

        stage('Build') {
            steps {
                echo "Building project..."
                sh 'mvn -B clean install'
            }
        }

        stage('Unit Tests') {
            steps {
                echo "Running tests..."
                sh 'mvn -B test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Package & Archive') {
            steps {
                echo "Packaging artifacts..."
                archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            }
        }

        stage('Docker Build (Optional)') {
            when {
                expression { fileExists('Dockerfile') }
            }
            steps {
                echo "Building Docker image..."
                sh "docker build -t cms-backend:latest ."
            }
        }
    }

    post {
        success {
            echo "✅ Build and tests succeeded!"
        }
        failure {
            echo "❌ Build or tests failed!"
        }
        always {
            cleanWs()
        }
    }
}
