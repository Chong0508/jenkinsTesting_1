pipeline {

    agent any

    environment {
        // Workspace directory for safe mounting into Docker containers
        WORKSPACE_DIR = "${env.WORKSPACE}"
    }

    stages {

        stage('Initial Docker Build') {
            steps {
                echo '1. Running clean install inside a dedicated Maven container...'

                // Use absolute path instead of $(pwd) to avoid shell expansion issues
                sh """
                    docker run -u 0 --rm \
                        -v ${WORKSPACE_DIR}:/app \
                        -w /app \
                        maven:3-jdk-11 mvn clean install -DskipTests=true
                """
            }
        }

        stage('Build & Unit Test') {
            steps {
                echo '2. Compiling source code and running unit tests...'
                sh 'mvn clean test -B'
            }
        }

        stage('Setup Integration Environment') {
            steps {
                echo '3. Starting services using docker-compose...'

                // Check docker-compose file exists before running it
                sh """
                    if [ ! -f docker-compose.yml ]; then
                        echo 'ERROR: docker-compose.yml NOT FOUND in workspace!'
                        exit 1
                    fi
                """

                sh """
                    docker-compose up -d --build cms-api mysql-db
                    echo "Waiting for environment to initialize..."
                    sleep 30
                """
            }
        }

        stage('Integration Tests') {
            when {
                expression { currentBuild.result == null || currentBuild.result == 'SUCCESS' }
            }
            steps {
                echo '4. Running Integration Tests...'
                sh 'mvn failsafe:integration-test failsafe:verify -B'
            }
        }
    }

    post {
        always {
            echo '5. Cleaning up Docker containers and publishing reports...'

            sh 'docker-compose down || true'

            // Publish both surefire + failsafe reports safely
            junit '**/target/surefire-reports/*.xml'
            junit '**/target/failsafe-reports/*.xml'

            cleanWs()
        }

        success {
            echo 'Pipeline Success! Build and Tests passed.'
        }

        failure {
            echo 'Pipeline FAILED. Check console output and Test Results for errors.'
        }
    }
}
