pipeline {
    agent any

    environment {
        // Defines the subdirectory containing the pom.xml and project files.
        PROJECT_DIR = "CMS" 
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo "Repository structure:"
                sh "ls -R ."
            }
        }

        stage('Verify Project Structure') {
            steps {
                echo "Checking ${PROJECT_DIR}/pom.xml..."
                sh "[ -f ${PROJECT_DIR}/pom.xml ]" 
            }
        }

        stage('Initial Docker Build') {
            steps {
                echo "Running Maven inside Docker (skip tests)..."
                
                // FINAL FIX: Mount the specific project subdirectory (${WORKSPACE}/CMS) to the container root (/app).
                // This makes the pom.xml directly available at /app/pom.xml
                sh """
                    docker run -u 0 --rm \\
                        -v ${WORKSPACE}/${PROJECT_DIR}:/app \\
                        -w /app \\
                        maven:3-jdk-11 mvn clean install -DskipTests=true
                """
            }
        }

        stage('Build & Unit Test') {
            steps {
                echo "Running Maven (unit tests)..."
                // Change directory to CMS before running Maven on the Jenkins agent.
                dir("${PROJECT_DIR}") {
                    sh "mvn clean test -B"
                }
            }
            post {
                always {
                    // Publish test reports from the project directory.
                    junit "${PROJECT_DIR}/target/surefire-reports/*.xml"
                }
            }
        }

        stage('Setup Integration Environment') {
            steps {
                echo "Starting docker-compose..."
                // Use the -f flag with the correct path relative to the workspace root.
                sh """
                    docker-compose -f ${PROJECT_DIR}/docker-compose.yml up -d --build
                    echo "Waiting 20 seconds for services to become available..."
                    sleep 20
                """
            }
        }

        stage('Integration Tests') {
            steps {
                echo "Running Maven Failsafe (integration tests)..."
                // Change directory to CMS before running Maven Failsafe.
                dir("${PROJECT_DIR}") {
                    sh "mvn failsafe:integration-test -B"
                }
            }
            post {
                always {
                    // Publish failsafe reports from the project directory.
                    junit "${PROJECT_DIR}/target/failsafe-reports/*.xml"
                }
            }
        }
    } // End of stages

    // Post-Build Actions: Cleanup and Reporting
    post {
        always {
            echo "Cleaning environment..."
            // Use the -f flag with the correct path, and || true for robust cleanup.
            sh "docker-compose -f ${PROJECT_DIR}/docker-compose.yml down || true"
            cleanWs()
        }
    }
}