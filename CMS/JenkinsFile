pipeline {
    agent {
        docker {
            image 'maven:3.9.5-eclipse-temurin-17'
            args '-v $HOME/.m2:/root/.m2' // Mount Maven cache
        }
    }

    environment {
        MAVEN_OPTS = "-Dmaven.repo.local=/root/.m2/repository"
        PROJECT_NAME = "CMS-Backend-Pipeline"
    }

    options {
        // Keep build logs for 30 days, max 50 builds
        buildDiscarder(logRotator(daysToKeepStr: '30', numToKeepStr: '50'))
        timestamps()  // add timestamps in console log
        ansiColor('xterm')  // colorize console logs
    }

    stages {
        stage('Checkout SCM') {
            steps {
                echo "Cloning repository..."
                git branch: 'main', url: 'https://github.com/Chong0508/jenkinsTesting_1.git'
            }
        }

        stage('Pre-build Dependencies') {
            steps {
                echo "Downloading Maven dependencies (offline mode)..."
                sh 'mvn -B dependency:go-offline'
            }
        }

        stage('Build') {
            steps {
                echo "Building project..."
                sh 'mvn -B clean install'
            }
        }

        stage('Unit Tests') {
            steps {
                echo "Running tests..."
                sh 'mvn -B test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Package & Archive') {
            steps {
                echo "Packaging artifacts..."
                archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            }
        }

        stage('Docker Build (Optional)') {
            when {
                expression { fileExists('Dockerfile') }
            }
            steps {
                echo "Building Docker image..."
                sh "docker build -t cms-backend:latest ."
            }
        }
    }

    post {
        success {
            echo "✅ Build and tests succeeded!"
        }
        failure {
            echo "❌ Build or tests failed!"
        }
        always {
            cleanWs()  // clean workspace after build
        }
    }
}
