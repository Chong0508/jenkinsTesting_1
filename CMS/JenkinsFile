pipeline {
    agent any

    environment {
        // Add Maven and Java to PATH if installed globally
        PATH = "${env.PATH}"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                echo 'Cloning repository...'
                git branch: 'main', url: 'https://github.com/Chong0508/jenkinsTesting_1.git', credentialsId: 'github-jenkinsTesting'
            }
        }

        stage('Check Maven & Java') {
            steps {
                echo 'Checking Maven and Java installation...'
                bat 'mvn -version'
                bat 'java -version'
            }
        }

        stage('Pre-build Dependencies') {
            steps {
                echo 'Downloading Maven dependencies...'
                bat 'mvn -B dependency:go-offline'
            }
        }

        stage('Build') {
            steps {
                echo 'Building project...'
                bat 'mvn clean install'
            }
        }

        stage('Unit Tests') {
            steps {
                echo 'Running unit tests...'
                bat 'mvn test'
            }
        }

        stage('Package & Archive') {
            steps {
                echo 'Packaging...'
                bat 'mvn package'
                archiveArtifacts artifacts: 'target\\*.jar', fingerprint: true
            }
        }
    }

    post {
        success {
            echo '✅ Build succeeded!'
        }
        failure {
            echo '❌ Build failed!'
        }
        always {
            cleanWs()
        }
    }
}
