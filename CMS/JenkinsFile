pipeline {
    agent any

    environment {
        MAVEN_OPTS = "-Dmaven.repo.local=/var/jenkins_home/.m2/repository"
    }

    stages {

        stage('Checkout SCM') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/Chong0508/jenkinsTesting_1.git',
                        credentialsId: 'github-jenkinsTesting'
                    ]]
                ])
            }
        }

        stage('Verify Project Structure') {
            steps {
                echo "Checking CMS/pom.xml..."
                sh '[ -f CMS/pom.xml ] || exit 1'
                sh 'chmod +x CMS/mvnw'
            }
        }

        stage('Start Docker Services') {
            steps {
                echo "Starting MySQL and API containers..."
                sh 'docker-compose -f CMS/docker-compose.yml up -d --build'
                echo "Waiting for MySQL to be ready..."
                sh '''
                until docker exec $(docker ps -qf "name=mysql-db") mysql -ucms_user -pcms_pass cms_db -e "SELECT 1;" &> /dev/null
                do
                    echo "Waiting for MySQL..."
                    sleep 3
                done
                '''
            }
        }

        stage('Build & Unit Test') {
    steps {
        dir('CMS') {
            echo "Running Maven build and tests with Java 20..."
            // Use Maven Docker image with JDK 20
            sh '''
            docker run --rm -v $PWD:/app -w /app maven:3.9.3-eclipse-temurin-20 mvn clean install
            '''
        }
    }
}

    }

    post {
        always {
            echo "Cleaning up Docker environment..."
            sh 'docker-compose -f CMS/docker-compose.yml down'
            cleanWs()
        }
    }
}

