pipeline {
    agent any

    environment {
        // Set JAVA_HOME and MAVEN_HOME if needed
        JAVA_HOME = 'C:\\Program Files\\Java\\jdk-25'
        MAVEN_HOME = 'C:\\Program Files\\Apache\\apache-maven-3.9.9'
        PATH = "${env.MAVEN_HOME}\\bin;${env.JAVA_HOME}\\bin;${env.PATH}"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                echo 'Cloning repository...'
                git branch: 'main', url: 'https://github.com/Chong0508/jenkinsTesting_1.git', credentialsId: 'github-jenkinsTesting'
            }
        }

        stage('Pre-build Dependencies') {
            steps {
                echo 'Downloading Maven dependencies...'
                bat 'mvn -B dependency:go-offline'
            }
        }

        stage('Build') {
            steps {
                echo 'Building project...'
                bat 'mvn clean install'
            }
        }

        stage('Unit Tests') {
            steps {
                echo 'Running unit tests...'
                bat 'mvn test'
            }
        }

        stage('Package & Archive') {
            steps {
                echo 'Packaging...'
                bat 'mvn package'
                archiveArtifacts artifacts: 'target\\*.jar', fingerprint: true
            }
        }
    }

    post {
        success {
            echo '✅ Build succeeded!'
        }
        failure {
            echo '❌ Build failed!'
        }
        always {
            cleanWs()
        }
    }
}
