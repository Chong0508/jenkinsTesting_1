pipeline {
    agent any

    environment {
        // Make sure Maven is in PATH on the Jenkins node
        MAVEN_HOME = 'C:\\Program Files\\Apache\\apache-maven-3.9.9'
        PATH = "${env.MAVEN_HOME}\\bin;${env.PATH}"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/Chong0508/jenkinsTesting_1.git'
            }
        }

        stage('Pre-build Dependencies') {
            steps {
                echo 'Downloading Maven dependencies...'
                bat 'mvn -B dependency:go-offline'
            }
        }

        stage('Build') {
            steps {
                echo 'Building project...'
                bat 'mvn -B clean install'
            }
        }

        stage('Unit Tests') {
            steps {
                echo 'Running tests...'
                bat 'mvn test'
            }
        }

        stage('Package & Archive') {
            steps {
                echo 'Packaging...'
                bat 'mvn package'
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }

    post {
        success {
            echo '✅ Build and tests succeeded!'
        }
        failure {
            echo '❌ Build or tests failed!'
        }
        always {
            cleanWs()
        }
    }
}
