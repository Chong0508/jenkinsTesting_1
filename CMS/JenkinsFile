pipeline {
    agent any

    environment {
        DOCKER_COMPOSE = "docker-compose -f CMS/docker-compose.yml"
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Chong0508/jenkinsTesting_1.git',
                    credentialsId: 'github-jenkinsTesting'
            }
        }

        stage('Verify Project') {
            steps {
                echo "Checking CMS/pom.xml..."
                sh '[ -f CMS/pom.xml ] || exit 1'
                sh 'chmod +x CMS/mvnw'
            }
        }

        stage('Build & Unit Test') {
            steps {
                echo "Building project in Maven Docker container..."
                dir('CMS') {
                    sh 'docker run --rm -v $PWD:/app -w /app maven:3-jdk-11 ./mvnw clean install -DskipTests'
                }
            }
        }

        stage('Start Integration Environment') {
            steps {
                echo "Starting MySQL and API..."
                sh "${DOCKER_COMPOSE} up -d --build"
                echo "Waiting for MySQL to be healthy..."
                sh 'sleep 20'  // adjust if necessary
            }
        }

        stage('Integration Tests') {
            steps {
                echo "Running Integration Tests..."
                dir('CMS') {
                    sh './mvnw verify'
                }
            }
        }
    }

    post {
        always {
            echo "Cleaning up Docker environment..."
            sh "${DOCKER_COMPOSE} down"
            cleanWs()
        }
    }
}
