pipeline {
    agent any

    environment {
        DOCKER_COMPOSE = 'docker-compose -f CMS/docker-compose.yml'
    }

    stages {
        stage('Verify Project Structure') {
            steps {
                sh '[ -f CMS/pom.xml ]'
            }
        }

        stage('Build & Unit Test') {
            steps {
                dir('CMS') {
                    sh './mvnw clean install -DskipTests=true'
                }
            }
        }

        stage('Integration Environment') {
            steps {
                sh "${DOCKER_COMPOSE} up -d"
                // Wait for MySQL to be healthy (already handled by wait-for-it.sh)
            }
        }

        stage('Integration Tests') {
            steps {
                dir('CMS') {
                    sh './mvnw test'
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up environment...'
            sh "${DOCKER_COMPOSE} down"
            cleanWs()
        }
    }
}
