pipeline {
    agent any

    environment {
        MAVEN_HOME = '/usr/share/maven'   // or wherever Maven is installed
        PATH = "${env.MAVEN_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/Chong0508/jenkinsTesting_1.git'
            }
        }

        stage('Pre-build Dependencies') {
            steps {
                echo 'Downloading Maven dependencies...'
                sh 'mvn -B dependency:go-offline'
            }
        }

        stage('Build') {
            steps {
                echo 'Building project...'
                sh 'mvn -B clean install'
            }
        }

        stage('Unit Tests') {
            steps {
                echo 'Running tests...'
                sh 'mvn test'
            }
        }

        stage('Package & Archive') {
            steps {
                echo 'Packaging...'
                sh 'mvn package'
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }

    post {
        success { echo '✅ Build and tests succeeded!' }
        failure { echo '❌ Build or tests failed!' }
        always { cleanWs() }
    }
}
